<%= form_for(@article, html: {multipart: true}) do |f| %>

 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="w3-container">
     <h1 class="w3-center"><%= f.label :title %></h1> 
     <div class="w3-center"><%= f.text_field :title,size: "60" %></div> 
  </div>
 
  <div class="w3-container">
      <h1 class="w3-center"><%= f.label :text %></h1>
    <div class="w3-center"><%= f.text_area :text ,size: "60x12"%></div>  <br>

 
  <div class="w3-row-padding">
        <div class="w3-third w3-margin-left">
                  <% if @article.image.exists? %>
                  <%= image_tag @article.image.url(:medium) %> 
                <% end %>

              <%= f.label :image, "Attach a New Image" %>
              <%= f.file_field :image %>
        </div>

        <div class="w3-third">
                  <%= f.label :tag_list %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <%= f.text_field :tag_list %>
        </div>
  </div>
 </div> 
  <div class="w3-center w3-margin-0">
    <%= f.submit %><br>
  </div>
 
<% end %>
